generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  firstName     String
  secondName    String?
  lastName      String
  phone         String   @unique
  omang         String   @unique
  pinHash       String
  referralCode  String   @unique @default(cuid())
  referredBy    String?  
  createdAt     DateTime @default(now())
  isAdmin       Boolean  @default(false)

  // Loans
  loans         LoanRequest[]

  // Referral relations â€“ FIXED PROPERLY
  referredUsers User[]   @relation("UserReferrals", fields: [referredBy], references: [referralCode])
  referrer      User?    @relation("UserReferrals", fields: [referredBy], references: [referralCode])
}

model LoanRequest {
  id          String   @id @default(cuid())
  userId      String
  amount      Int
  repayAmount Int
  status      String   @default("PENDING")
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
}

model ReferralClick {
  id        String   @id @default(cuid())
  code      String
  ip        String
  userAgent String?
  createdAt DateTime @default(now())
}